type Customer {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  email: String!
  active: Boolean!
}

type Order {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  externalId: String!
  channel: String!
  customer: Customer! @relation(link: INLINE)
  subTotal: Int!
  shippingStatus: String!
}

type Product {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  title: String!
  description: String
}

type Item {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  sku: String!
  price: Int!
  quantity: Int!
  product: Product! @relation(link: INLINE)
  itemOptions: [ItemOption!]! @relation(name: "ItemOption")
}

type ItemOption {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  value: String!
}

type OrderLine {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  item: Item! @relation(link: INLINE)
  quantity: Int!
  order: Order! @relation(link: INLINE)
}
